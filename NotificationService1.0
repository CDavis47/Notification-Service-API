openapi: 3.0.0
info:
  version: '1.0'
  title: 'Notification Service'
servers:
  - url: https://CUSports/v1
paths:
  /user:
    get:
      summary: 'Returns details about a particular user'
      operationId: listUser
      tags:
        - user
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
      responses:
        '200':
          description: 'Details about a user by ID'
          headers:
            x-next:
              description: A link to the next page of responses
              schema:
                type: string
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/User'
        default:
          description: Unexpected error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
    post:
      summary: 'Send a user a notification'
      operationId: sendMessage
      tags:
        - user
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: message
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: failed to send message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error'
    post:
      summary: 'Send a user an order update'
      operationId: sendMessage
      tags:
        - user
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: ordernumber
          in: query
          description: order number
          required: true
          schema:
            type: integer
            format: int32
        - name: orderstatus
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
        - name: message
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: failed to send message
    post:
      summary: 'Send a user a customer support ticket update'
      operationId: sendMessage
      tags:
        - user
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: ticketnumber
          in: query
          description: customer support ticket number
          required: true
          schema:
            type: integer
            format: int32
        - name: message
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: failed to send message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error'
components:
  schemas:
    User:
      type: object
      required:
        - id
        - name
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        tag:
          type: string
    
  securitySchemes:
    BasicAuth:
      type: http
      scheme: basic
    
  responses:
    400Error:
      description: Invalid request
      content:
        application/json:
          schema:
            type: object
            properties:
              message:
                type: string
security:
  - BasicAuth: []