openapi: 3.0.0
info:
  version: '2.0'
  title: 'Notification Service'
servers:
  - url: https://CUSports/v1
paths:
  /user:  
    post:
      summary: 'Send a user a notification'
      operationId: sendMessage
      tags:
        - user
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: message
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                type: object
                properties:
                    message:
                        type: string
                        description: Message failed to send due to missing/invalid parameters.
                
  /customer:
    post:
      summary: 'Send a user an order update'
      operationId: sendMessage
      tags:
        - customer
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: ordernumber
          in: query
          description: order number
          required: true
          schema:
            type: integer
            format: int32
        - name: orderstatus
          in: query
          description: status of the order
          required: true
          schema:
            type: string
        - name: orderupdate
          in: query
          description: updated order information
          required: false
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error/' 
  /customerreceipt:
    post:
        summary: 'Send a customer an order receipt'
        operationId: 'sendReceipt'
        tags:
            - customerreceipt
        parameters:
        - name: ordernumber
          in: query
          description: order number
          required: true
          schema:
            type: integer
            format: int32
        - name: itemname
          in: query
          description: item name
          required: true
          schema:
            type: string
        - name: shippingaddress
          in: query
          description: shipping address
          required: true
          schema:
            type: string
        - name: total
          in: query
          description: total charged to the customer
          required: true
          schema:
            type: integer
            format: int32
        responses:
          '200':
            description: Message Sent
          '400':
            description: Failed to Send Message
            content:
              application/json:
                schema:
                  $ref: '#/components/responses/400Error/' 
  /customersupport:
    post:
      summary: 'Send a user a customer support ticket update'
      operationId: sendMessage
      tags:
        - customersupport
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: ticketnumber
          in: query
          description: customer support ticket number
          required: true
          schema:
            type: integer
            format: int32
        - name: ticketupdate
          in: query
          description: updated ticket information
          required: true
          schema:
            type: string
        - name: ticketlink
          in: query
          description: link to support ticket
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error'
  /vendorsetup:
    post:
      summary: 'Send account information and password reset link'
      operationId: sendMessage
      tags:
        - vendorsetup
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: username
          in: query
          description: account username
          required: true
          schema:
            type: string
        - name: password
          in: query
          description: automatically generated password
          required: true
          schema:
            type: string
        - name: password reset link
          in: query
          description: password reset link
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error'
            
components:
  schemas:
    User:
      type: object
      required:
        - id
        - name
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        tag:
          type: string
    
  securitySchemes:
    BasicAuth:
      type: http
      scheme: basic
    
  responses:
    400Error:
      description: Invalid request
      content:
        application/json:
          schema:
            type: object
            properties:
              message:
                type: string
                description: Message failed to send due to missing/invalid parameters.
security:
  - BasicAuth: []