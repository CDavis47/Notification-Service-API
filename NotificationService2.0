openapi: 3.0.0
info:
  version: '2.0'
  title: 'Notification Service'
servers:
  - url: https://CUSports/v1
paths:
  /user:  
    post:
      summary: 'Send a user a notification'
      operationId: sendMessage
      tags:
        - user
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: message
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error'
                
  /customersupport:
    post:
      summary: 'Send a user an order update'
      operationId: sendMessage
      tags:
        - customersupport
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: ordernumber
          in: query
          description: order number
          required: true
          schema:
            type: integer
            format: int32
        - name: orderstatus
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
        - name: message
          in: query
          description: notification message to be sent
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error/'
                
  /customer:
    post:
      summary: 'Send a user a customer support ticket update'
      operationId: sendMessage
      tags:
        - customer
      parameters:
        - name: id
          in: query
          description: ID of the user
          required: true
          schema:
            type: integer
            format: int32
        - name: ticketnumber
          in: query
          description: customer support ticket number
          required: true
          schema:
            type: integer
            format: int32
        - name: ticket update
          in: query
          description: updated ticket information
          required: true
          schema:
              type: string
              format: string
      responses:
        '200':
          description: Message Sent
        '400':
          description: Failed to Send Message
          content:
            application/json:
              schema:
                $ref: '#/components/responses/400Error'
components:
  schemas:
    User:
      type: object
      required:
        - id
        - name
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        tag:
          type: string
    
  securitySchemes:
    BasicAuth:
      type: http
      scheme: basic
    
  responses:
    400Error:
      description: Invalid request
      content:
        application/json:
          schema:
            type: object
            properties:
              message:
                type: string
security:
  - BasicAuth: []